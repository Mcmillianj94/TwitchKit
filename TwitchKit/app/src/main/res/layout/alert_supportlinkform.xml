<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/text_lightTheme">

    <EditText
        android:id="@+id/editText_alert_linkTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Link Title"/>

    <EditText
        android:id="@+id/editText_alert_linkUrl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Link URL"/>

    <EditText
        android:id="@+id/editText_alert_linkPic"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Link Picture"/>

</LinearLayout>